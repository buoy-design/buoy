{
  "name": "@buoy-design/plugin-tailwind",
  "version": "0.0.1",
  "description": "Buoy plugin for Tailwind CSS design drift detection",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@buoy-design/core": "workspace:*",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vitest": "^2.1.9"
  },
  "peerDependencies": {
    "tailwindcss": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": true
    }
  },
  "keywords": [
    "buoy",
    "tailwind",
    "tailwindcss",
    "design-system",
    "drift-detection"
  ],
  "license": "MIT"
}
